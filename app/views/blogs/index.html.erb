<div class="container">
  <h1>ブログ一覧</h1>
  <p><%= notice %></p>
  <br>
  <%= link_to '新しくブログを投稿する', new_blog_path, class:'btn btn-primary' %>
    <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <h2>タイトル：<%= blog.title %></h2>
        <p>本文：<%= blog.content %></p>
        <p>投稿者名：<%= blog.user.name %></p>
        <div class="blog-links">
          <%= link_to '詳細を確認する', blog_path(blog.id), class:'btn btn-default' %>
          <% if current_user.id == blog.user_id %>
           <%= link_to 'ブログを編集する', edit_blog_path(blog.id), class:'btn btn-default' %>
           <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class:'btn btn-default'%>
           <% else %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
